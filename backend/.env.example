# ============================================
# Backend Environment Variables
# ============================================

# ---------------------------------------------
# Supabase Configuration (New API Keys)
# ---------------------------------------------
# Use the new sb_publishable_* and sb_secret_* keys instead of legacy JWT keys
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_API_KEY=sb_publishable_your_publishable_key
SUPABASE_SECRET_KEY=sb_secret_your_secret_key
SUPABASE_PROJECT_ID=your_project_id

# ---------------------------------------------
# OpenAI Configuration
# ---------------------------------------------
OPENAI_API_KEY=sk-proj-your_openai_api_key
OPENAI_PROJECT_ID=proj_your_project_id
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# ---------------------------------------------
# Redis Configuration (Upstash)
# ---------------------------------------------
REDIS_URL=redis://localhost:6379

# ---------------------------------------------
# Celery Configuration
# ---------------------------------------------
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ---------------------------------------------
# API Server Configuration
# ---------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000

# ---------------------------------------------
# Application Settings
# ---------------------------------------------
DEBUG=false
ENVIRONMENT=production

# ---------------------------------------------
# Crawler Configuration
# ---------------------------------------------
DEFAULT_SCRAPER_TYPE=basic
DEFAULT_TIMEOUT=30
DEFAULT_MAX_PAGES=10
DEFAULT_RATE_LIMIT=1.0
DEFAULT_USER_AGENT=Mozilla/5.0 (compatible; AI-WebScraper/1.0)
